@model List<Department>

@{
	Layout = "_Advanced";
}


<h1 style="color:red">Index</h1>

<a href="/Department/Add" class="btn btn-success">New</a>

<table class="table table-bordered table-hover">
	<tr>
		<th>No.</th>
		<th>Name</th>
		<th></th>
	</tr>

	@foreach(var item in Model)
	{
		<tr>
			<th>@item.Id</th>
			<th>@item.Name</th>
			<th><a href="/Department/Details/@item.Id" class="btn btn-success">Details</a></th>
			<th><a href="/Department/Edit/@item.Id" class="btn btn-success">Edit</a></th>
			<th><a href="/Department/Delete/@item.Id" class="btn btn-danger">Delete</a></th>


		</tr>

	}



</table>
 
<style>
	table td, table th {
		color: white !important;
	}
</style>





